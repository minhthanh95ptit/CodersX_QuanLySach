extends ../layouts/common
block content
  h1 List Books

  a(href="/create") Add New Book

  form(action="/books/create",method = "POST")
      label Title:
      br
      input(name = "title", type= "text")
      br
      label Descripttion
      br
      input(name = "description", type= "text")
      br
      button Create

  ul
    each book in books
      li
        span=book.title
        span &nbsp
        a(href="/books/" + book.id + "/update") Update
        span &nbsp
        a(href="/books/" + book.id + "/delete") Delete